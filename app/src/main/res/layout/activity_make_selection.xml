<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="30dp"
        tools:context=".ForgotPassword">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Make Selection"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select which contact details should you use to reset your password"
                android:textAlignment="center"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="50dp"
                android:background="@color/lightwhite"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/mobile_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mobile_custom_icon"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:id="@+id/mobile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="via sms:"
                    android:layout_toRightOf="@+id/mobile_icon"
                    android:layout_marginTop="35dp" />

                <TextView
                    android:id="@+id/mobile_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:text="+91292923990"
                    android:layout_toRightOf="@+id/mobile_icon"
                    android:layout_below="@id/mobile_title" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:background="@color/lightwhite"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mail_custom_icon"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:id="@+id/mail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="via mail:"
                    android:layout_toRightOf="@+id/mail_icon"
                    android:layout_marginTop="35dp" />

                <TextView
                    android:id="@+id/mail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="support@gmail.com"
                    android:layout_toRightOf="@+id/mail_icon"
                    android:layout_below="@id/mail_title" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
</layout>